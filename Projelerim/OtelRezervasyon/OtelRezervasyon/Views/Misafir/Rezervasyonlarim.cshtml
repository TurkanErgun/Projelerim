@using OtelRezervasyon.Models.Entity
@model List<TblRezervasyon>

@{
    ViewBag.Title = "Rezervasyonlarim";
    Layout = "~/Views/Shared/_MisafirLayout.cshtml";
}
<br />
<h2>Rezervasyonlarım</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <th>Giriş Tarihi</th>
        <th>Çıkış Tarihi</th>
        <th>Kişi</th>
        <th>Oda No</th>
        <th>Telefon</th>
        <th>Açıklama</th>


    </tr>
    @foreach(var x in Model)
     {
          <tr>
              @*<td>@x.RezervasyonAdSoyad</td>*@
              <td>@x.RezervasyonAdSoyad</td>
              <td>@(((DateTime)x.GirisTarih).ToString("dd-MMM-yyyy"))</td>
              <td>@(((DateTime)x.CikisTarih).ToString("dd-MMM-yyyy"))</td>
              <td>@x.Kisi</td>
              <td>@x.TblOda.OdaID</td>
              <td>@x.Telefon</td>
              <td>@x.Aciklama</td>

          </tr>
     }
</table>
