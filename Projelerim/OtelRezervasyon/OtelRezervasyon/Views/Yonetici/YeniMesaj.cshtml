@model OtelRezervasyon.Models.Entity.TblMesaj2
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_YoneticiLayout.cshtml";
}

<br />
<h2>Yeni Mesaj Sayfası</h2>
<br />
<form method="post">
    
    <label>Alıcı</label>
    @Html.TextAreaFor(x => x.Alici, new { @class = "form-control" })
    <br />
    <label>Konu</label>
    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
    <br />
    <label>Mesajınız</label>
    @Html.TextAreaFor(x => x.Mesaj, 10, 4, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Gönder</button>
</form>
