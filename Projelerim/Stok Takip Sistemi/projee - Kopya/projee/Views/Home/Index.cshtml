<body class="hold-transition login-page" >
    <div class="login-box">

        @if (ViewBag.sonuc != null)
        {
            <div class="callout callout-danger">
                <h5>Uyarı</h5>
                <p>
                    @ViewBag.sonuc
                </p>
            </div>
        }



    <div class="login-logo">
        <a href="../../index.html" style="color:purple"><b>Ergün Kozmetik</b></a>

    </div>
        <!-- /.login-logo -->
        <div class="card">
