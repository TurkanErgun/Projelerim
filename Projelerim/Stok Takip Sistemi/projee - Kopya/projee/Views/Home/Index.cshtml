                <p class="login-box-msg">Kullanıcı girişi yapınız.</p>

                @* <form action="../../index3.html" method="post">*@








                @using (Html.BeginForm())
                {
                    <div class="input-group mb-3">
                        <input name="eposta" type="email" class="form-control" placeholder="Eposta">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input name="sifre" type="password" class="form-control" placeholder="Şifre">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="icheck-primary">
                                @*<input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>*@
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" style="background-color:rebeccapurple;color:white" class="btn btn-light btn-block">Giriş Yap</button>
                        </div>
                        <div class="col-4">

                        </div>
                        <!-- /.col -->
                   

                    </div>
                    <!-- /.col -->
                   

                }








